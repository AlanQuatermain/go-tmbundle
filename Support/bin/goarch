#!/usr/bin/env bash

go_arch_identifier () {
	case "`sysctl -n hw.machine`" in
	arm)
		echo "5"
		;;
	i386)
		case `sysctl -n hw.optional.x86_64 2>/dev/null` in
		1)
			echo "6"
			;;
		*)
			echo "8"
			;;
		esac
		;;
	esac
}

O=`go_arch_identifier`
AS=${O}a
CC=${O}c
GC=${O}g
LD=${O}l
NM=${O}nm
AR=gopack
MK=gomake

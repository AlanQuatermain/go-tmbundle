#!/usr/bin/env bash

go_arch () {
	case "`sysctl -n hw.machine`" in
	arm)
		echo "arm"
		;;
	i386)
		case "`sysctl -n hw.optional.x86_64 2>/dev/null`" in
		1)
			echo "amd64"
			;;
		*)
			echo "386"
			;;
		esac
		;;
	esac
}

go_arch_identifier () {
	case "$*" in
	arm)
		echo "5"
		;;
	amd64)
		echo "6"
		;;
	386)
		echo "8"
		;;
	esac
}

GOOS=darwin
GOARCH=`go_arch`
export GOOS GOARCH
